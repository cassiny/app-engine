extends ../page-layout.pug

block append styles
  link(rel='stylesheet', href=app.getAssetUrl('/join/res/min.css'))

block append content
  from.join-form(method='post', action='/join', accept-charset='UTF-8')
    h1 Join cassiny
    p The best way to build and delopy app engine
    .join-form-groups
      #emailGroup.form-group
        label.control-label(for='emailField') Email
        input.form-control(type='text', id='emailField', name='join_email', autofocus, autocomplete='off')
        .help-block
      #usernameGroup.form-group
        label.control-label(for='usernameField') Username
        input.form-control(type='text', id='usernameField', name='join_username', autofocus, autocomplete='off')
        .help-block
      #passwordGroup.form-group
        label.control-label(for='passwordField') Password:
        input.form-control(type='password', id='passwordField', name='password')
        .help-blocks
      input.btn.btn-primary.btn-block(type='submit', name='Join', value='Join us')
    p.login Have an account already? <a href='/login'>Login</a>.
